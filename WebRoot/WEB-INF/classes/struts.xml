<?xml version="1.0" encoding="UTF-8" ?>   
<!DOCTYPE struts PUBLIC   
    "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"   
    "http://struts.apache.org/dtds/struts-2.0.dtd">   
<struts> 
	<constant name="struts.multipart.maxSize" value="900000000"/>  
    <constant name="struts.i18n.encoding" value="UTF-8"/>  
            <!-- 指定默认编码集 ，作用于HttpServletRequest的setCharacterEncoding（）和freemarker，vilocity的输出 -->  
    <constant name="struts.configuration.xmlreload" value="true"/>  
            <!-- 当struts配置文件修改时是否自动加载 -->  
    <constant name="struts.devMode" value="true"/>  
            <!-- 开发模式下打印详细的错误信息 -->  
    <constant name="struts.ui.theme" value="xhtml"/> 
    <!--登陆管理 -->
	<include file="Login.xml" />
	<!--用户管理 -->
	<include file="Teacher.xml" />
	<!--学生管理-->
	<include file="Student.xml" />
	<!--知识点管理-->
	<include file="Knowledge.xml"/>
	<!--聊天信息管理-->
	<include file="Chat.xml"/>
</struts>  

