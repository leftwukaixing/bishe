        </action>    
    </package> 
     -->
	<package name="other" namespace="/other" extends="struts-default">
	    <action name="showTerm">  
            <result name="success">/WEB-INF/other/updateTerm.jsp</result>  
        </action>
        <action name="showTeacher" class="manage.action.otherAction">  
            <result name="success">/WEB-INF/other/updateTeacher.jsp</result>   
        </action> 
    	<action name="updateTerm" class="manage.action.otherAction">  
            <result name="success">/WEB-INF/other/information.jsp</result>  
        </action>
        <action name="updateTeacher" class="manage.action.otherAction">  
            <result name="success">/WEB-INF/other/teacher_info.jsp</result>   
        </action>
        <action name="update" class="manage.action.otherAction">
        	<result name="success">/WEB-INF/other/information.jsp</result> 
        </action>
    </package>
    
</struts>  

